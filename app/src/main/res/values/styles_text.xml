<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">@dimen/item_detail_main_header_title_size</item>
        <item name="android:lineSpacingMultiplier">.9</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">@dimen/main_toolbar_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Headline6">
        <item name="android:textSize">@dimen/item_header_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>

    <style name="Headline6.Alt" parent="Headline6">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Body1">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NowPlaying">
        <item name="android:textSize">@dimen/player_now_playing_size</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:alpha">.4</item>
    </style>

</resources>