<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="4dp"
    android:layout_marginBottom="@dimen/item_header_bottom_inset"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_marginStart="@dimen/item_album_margin"
    android:layout_marginEnd="@dimen/item_album_margin">

    <dev.olog.feature.presentation.base.widget.CanareeButton
        android:id="@+id/tracks"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/albums"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginEnd="@dimen/canaree_button_margin"
        android:text="@string/common_tracks"
        android:src="@drawable/vd_audiotrack"
        style="@style/CanareeButton" />

    <dev.olog.feature.presentation.base.widget.CanareeButton
        android:id="@+id/albums"
        app:layout_constraintTop_toTopOf="@+id/tracks"
        app:layout_constraintStart_toEndOf="@+id/tracks"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:text="@string/common_albums"
        android:src="@drawable/vd_album"
        style="@style/CanareeButton"
        android:drawablePadding="14dp"/>

    <dev.olog.feature.presentation.base.widget.CanareeButton
        android:id="@+id/playlists"
        android:layout_marginTop="@dimen/canaree_button_margin"
        app:layout_constraintTop_toBottomOf="@+id/tracks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tracks"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:text="@string/common_playlists"
        android:src="@drawable/vd_playlist_play"
        style="@style/CanareeButton"/>

    <dev.olog.feature.presentation.base.widget.CanareeButton
        android:id="@+id/artists"
        app:layout_constraintTop_toTopOf="@+id/playlists"
        app:layout_constraintStart_toStartOf="@+id/albums"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:text="@string/common_artists"
        android:src="@drawable/vd_mic"
        style="@style/CanareeButton"/>

    <dev.olog.feature.presentation.base.widget.CanareeButton
        android:id="@+id/folders"
        android:layout_marginTop="@dimen/canaree_button_margin"
        app:layout_constraintTop_toBottomOf="@+id/playlists"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tracks"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:text="@string/common_folders"
        android:src="@drawable/vd_folder"
        style="@style/CanareeButton"
        android:drawablePadding="14dp"/>

    <dev.olog.feature.presentation.base.widget.CanareeButton
        android:id="@+id/favorites"
        app:layout_constraintTop_toTopOf="@+id/folders"
        app:layout_constraintStart_toStartOf="@+id/albums"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:text="@string/common_favorites"
        android:src="@drawable/vd_favorite"
        style="@style/CanareeButton"
        android:drawablePadding="14dp"/>

    <dev.olog.feature.presentation.base.widget.CanareeButton
        android:id="@+id/genres"
        android:layout_marginTop="@dimen/canaree_button_margin"
        app:layout_constraintTop_toBottomOf="@+id/folders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tracks"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:text="@string/common_genres"
        android:src="@drawable/vd_dj"
        style="@style/CanareeButton"
        android:drawablePadding="14dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

