<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Song" parent="@android:style/TextAppearance">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Album">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Song.MainText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/item_song_title</item>
    </style>

    <style name="Song.SecondaryText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/item_song_subtitle</item>
    </style>


    <style name="Album.MainText">
        <item name="android:textSize">@dimen/item_album_title</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Album.SecondaryText">
        <item name="android:textSize">@dimen/item_album_subtitle</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="QuickActionStyle">
        <item name="android:padding">6dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:tint">#797979</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:elevation">8dp</item>
    </style>

    <dimen name="smallShuffleSize">30dp</dimen>
    <dimen name="item_album_margin">5dp</dimen>

</resources>