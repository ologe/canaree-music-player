<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_exit_gradient"
        android:layout_width="@dimen/exit_width"
        android:translationY="20dp"
        android:layout_height="@dimen/exit_height"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient_black_to_transparent"
        android:layout_gravity="bottom|center_horizontal"/>

    <ImageView
        android:id="@+id/view_exit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:tint="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/vd_cancel"
        android:layout_gravity="center_horizontal|bottom"/>

</merge>