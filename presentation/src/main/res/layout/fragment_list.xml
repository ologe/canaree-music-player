<?xml version="1.0" encoding="utf-8"?>
<dev.olog.presentation.widgets.MaxHeightLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:maxHeightDp="@integer/blacklist_max_height">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:requiresFadingEdge="vertical"
        tools:listitem="@layout/dialog_blacklist_item" />

</dev.olog.presentation.widgets.MaxHeightLinearLayout>